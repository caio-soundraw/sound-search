{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sound-search",
  "title": "Sound Search",
  "description": "Searches sounds",
  "icon": "extension-icon.png",
  "author": "clins1994",
  "contributors": [
    "perfectbase"
  ],
  "owner": "tokyo-ai-hackathon",
  "platforms": [
    "macOS"
  ],
  "categories": [
    "Fun",
    "Media",
    "Other",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-samples",
      "title": "Search Samples",
      "description": "Search for samples",
      "mode": "view"
    }
  ],
  "tools": [
    {
      "name": "ask-soundraw",
      "title": "Ask Soundraw",
      "description": "Allows searching samples via prompt by automagically guessing which genres the user wants from the pool of possible genres"
    }
  ],
  "ai": {
    "instructions": "Use the ask-soundraw tool to search for audio samples. When a user asks for music, sounds, or samples, interpret their natural language query and use the tool to find matching samples. The tool automatically maps queries to appropriate genres from the available pool.",
    "evals": [
      {
        "input": "@sound-search find me some energetic electronic music",
        "expected": [
          {
            "callsTool": {
              "name": "ask-soundraw",
              "arguments": {
                "query": {
                  "includes": "energetic"
                }
              }
            }
          }
        ],
        "usedAsExample": true
      },
      {
        "input": "@sound-search I need jazz tracks",
        "expected": [
          {
            "callsTool": {
              "name": "ask-soundraw",
              "arguments": {
                "query": {
                  "includes": "jazz"
                }
              }
            }
          }
        ],
        "usedAsExample": true
      }
    ]
  },
  "preferences": [
    {
      "name": "soundrawToken",
      "title": "API Token",
      "description": "Your Soundraw API token",
      "type": "password",
      "placeholder": "8bf36ea4-6e85-4c46-814a-eb9c5676b03d",
      "required": true
    },
    {
      "name": "soundrawApiUrl",
      "title": "API Url",
      "description": "Your Soundraw API URL",
      "type": "textfield",
      "placeholder": "https://api.example.com/api/v1",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.5",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
